var MLCCaseStudyPanel = {
        
        initialize: function() {
            //Hide the flipContent Divs
            $(".MLCCaseStudyPanel_flipContent").each(function(){
                $(this).css('display', 'none');
            });
            //Set up the buttons
            $(".MLCCaseStudyPanel_flipLink_contentLink").each(function(){
                $(this).bind("click", function(){
                    MLCCaseStudyPanel.SetContent($(this).attr('target'));
                    return false;
                });
            });

            
           MLCCaseStudyPanel.SetContent('#MLCCaseStudyPanel_flipContent_1');

        },
        SetContent: function(strNIdFlipContent) {
            MLCCaseStudyPanel.strIdFlipContent = strNIdFlipContent;
            //Flip the content
            $("#MLCCaseStudyPanel_flipDiv").flip({
                direction:'rl',
                content:$(MLCCaseStudyPanel.strIdFlipContent),
                color:'#000099',
                onEnd: function(){
                       MLC.SetToolTips();
                }
            });
            
        }
}
