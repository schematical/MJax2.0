var MLC = {
		initialize: function() {
            this.arrScriptOnLoadKey = new Array();
            this.arrScriptOnLoadFun = new Array();
            this.loadJavaScriptFile = function(strScript, objCallback) {
            //strScript = strScript;
				var objNewScriptInclude = document.createElement("script");
				objNewScriptInclude.setAttribute("type", "text/javascript");
				objNewScriptInclude.setAttribute("src", strScript);
				document.getElementById(document.getElementById("Qform__FormId").value).appendChild(objNewScriptInclude);
                //alert(strScript + "//" + objCallback);
                if(objCallback != null){
                    var intIndex = this.arrScriptOnLoadKey.length;
                    this.arrScriptOnLoadKey[intIndex] = strScript;
                    this.arrScriptOnLoadFun[intIndex] = objCallback;
                }
				
			};
            this.MarkLoaded = function(strName){

                for(var i = 0; i < this.arrScriptOnLoadKey.length; i++){
                    var strExtention = ".js";
                    var intSubStart = this.arrScriptOnLoadKey[i].length - (strName.length + strExtention.length);
                    var intSubEnd = this.arrScriptOnLoadKey[i].length - + strExtention.length;
                    if(this.arrScriptOnLoadKey[i].substring(intSubStart, intSubEnd) == strName){
                        return this.arrScriptOnLoadFun[i]();
                    }
                    return null;
                }
            }

        },
        SetToolTips: function(){
            //Set up the tool tips            
            $(".MLC_qtip").each(function(){
                var strContent = $(this).attr("content");
                var strTarget = $(this).attr("qtarget");
                if((strTarget == undefined)||(strTarget.length <= 1)){
                    strTarget = 'topMiddle';
                }
                var strTooltip = $(this).attr("tooltip");
                if((strTooltip == undefined)||(strTooltip.length <= 1)){
                    strTooltip = 'bottomMiddle';
                }

                var intWidth = $(this).attr("width");
                if((intWidth == undefined)||(intWidth.length <= 1)){
                    intWidth = 400;
                }

                $(this).qtip({
                     content: strContent,
                     position: {
                        corner: {
                           tooltip: strTooltip,
                           target: strTarget
                        }
                     },
                     style: {
                        width: intWidth,
                        tip: true // Give it a speech bubble tip with automatic corner detection
                     }
                });
            });
        },
        
        SetContactLinks: function(){
            $('#MLCEmailLink').attr('href', "mailto:info@mattleaconsulting.com");
            $('#MLCEmailLink').text('info@mattleaconsulting.com');
            $('#MLCPhoneLink').text('262-880-6840');
        }
};
MLC.initialize();